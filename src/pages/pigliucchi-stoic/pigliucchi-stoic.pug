include ../../components/head/head
include ../../components/header/header
include ../../components/article-headline/article-headline

- var id = 'pigliucchi-stoic'
- var author = 'Массимо Пильюччи'
- var authorLink = 'https://ru.wikipedia.org/wiki/%D0%9F%D0%B8%D0%BB%D1%8C%D1%8E%D1%87%D1%87%D0%B8,_%D0%9C%D0%B0%D1%81%D1%81%D0%B8%D0%BC%D0%BE'
- var title = 'Как быть стоиком'
- var publisher = 'Альпина нон-фикшн, 2018. 278 с.'
- var headline = 'Стоицизм — учение будущего?'
- var desc = 'Кажется, книга Массимо Пильюччи «Как быть стоиком» вскоре породит новый общественный тренд. Вместо Гоа люди поедут в Грецию'

doctype html
html
    +head(
      `${headline}`,
      `${desc}`,
      `http://umwelt-books.ru/img/${id}-og.jpg`,
      'article'
    )
body.body_light
    +header('mini')
    div.content
        div.article
            div.article__text
                include:markdown-it(plugins=['markdown-it-attrs']) ../../../node_modules/soshnikov-writing/publications/umwelt/site/pigliucchi-stoic.md
            div.article__data
                figure
                    img(src=`http://umwelt-books.ru/img/${id}-cover.jpg`)
                    figcaption 
                        p 
                            a(href=`${authorLink}`)=`${author}`
                        p 
                        |«
                        =`${title}`
                        |»
                        p=`${publisher}`