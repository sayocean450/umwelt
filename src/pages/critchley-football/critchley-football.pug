include ../../components/head/head
include ../../components/header/header

- var id = 'critchley-football'
- var author = 'Саймон Кричли'
- var authorLink = 'https://en.wikipedia.org/wiki/Simon_Critchley/'
- var title = 'О чем мы думаем, когда думаем о футболе'
- var publisher = ' КоЛибри, 2018, 208 с.'
- var headline = 'Балет рабочего класса'
- var desc = 'Об актуальном эссе Саймона Кричли, в котором философ пытается докопаться до сути популярности футбола'

doctype html
html
    +head(
      `${headline}`,
      `${desc}`,
      `http://umwelt-books.ru/img/${id}-og.jpg`,
      'article'
    )
body.body_light
    +header('mini')
    div.content
        div.article
            div.article__text
                include:markdown-it(plugins=['markdown-it-attrs']) ../../../node_modules/soshnikov-writing/publications/umwelt/site/critchley-football.md
            div.article__data
                figure
                    img(src=`http://umwelt-books.ru/img/${id}-cover.jpg`)
                    figcaption 
                        p 
                            a(href=`${authorLink}`)=`${author}`
                        p 
                        |«
                        =`${title}`
                        |»
                        p=`${publisher}`