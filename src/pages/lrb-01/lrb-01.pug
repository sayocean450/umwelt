include ../../components/head/head
include ../../components/header/header
include ../../components/article-headline/article-headline
include ../../components/article-breadcrumb/article-breadcrumb

- var id = 'lrb-01'
- var author = 'Журнал «Логос»'
- var authorLink = 'http://www.logosjournal.ru/'
- var title = 'Logos Review of Books'
- var publisher = 'Журнал «Логос», 2020, 78 стр.'
- var headline = 'Ревью в квадрате'
- var desc = 'Дочитал первый номер цветной литературной газеты «Logos Review of Books», получил натурально физическое удовольствие'

doctype html
html
    +head(
      `${headline} • ${author}, «${title}»`,
      `${desc}`,
      `http://umwelt-books.ru/img/${id}-og.jpg`,
      'article'
    )
body.body_light
    +header('mini')
    div.content
        div.article
            div.article__text
                include:markdown-it(plugins=['markdown-it-attrs']) ../../../node_modules/soshnikov-writing/publications/umwelt/site/logos-review-of-books-1.md
            div.article__data
                figure
                    img(src=`http://umwelt-books.ru/img/${id}-cover.jpg`)
                    figcaption 
                        p 
                            a(href=`${authorLink}`)=`${author}`
                        p 
                        |«
                        =`${title}`
                        |»
                        p=`${publisher}`