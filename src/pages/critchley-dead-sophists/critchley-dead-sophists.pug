include ../../components/head/head
include ../../components/header/header

- var id = 'critchley-dead-sophists'
- var author = 'Саймон Кричли'
- var authorLink = 'https://en.wikipedia.org/wiki/Simon_Critchley'
- var title = 'Книга мёртвых философов'
- var publisher = 'Рипол Классик, 2017. 448 с. Переводчик Павел Миронов'
- var headline = 'Страх неизбежен'
- var desc = 'О труде Саймона Кричли, желающего преодолеть страх смерти'

doctype html
html
    +head(
      `${headline}`,
      `${desc}`,
      `http://umwelt-books.ru/img/${id}-og.jpg`,
      'article'
    )
body.body_light
    +header('mini')
    div.content
        div.article
            div.article__text
                include:markdown-it(plugins=['markdown-it-attrs']) ../../../node_modules/soshnikov-writing/publications/umwelt/site/critchley-dead-sophists.md
            div.article__data
                figure
                    img(src=`http://umwelt-books.ru/img/${id}-cover.jpg`)
                    figcaption 
                        p 
                            a(href=`${authorLink}`)=`${author}`
                        p 
                        |«
                        =`${title}`
                        |»
                        p=`${publisher}`