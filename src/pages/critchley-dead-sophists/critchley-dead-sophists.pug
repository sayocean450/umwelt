include ../../components/head/head
include ../../components/header/header
include ../../components/article-headline/article-headline
include ../../components/article-breadcrumb/article-breadcrumb

- var id = 'critchley-dead-sophists'

doctype html
html
    +head(
      'Страх неизбежен',
      'О труде Саймона Кричли, желающего преодолеть страх смерти',
      `http://umwelt-books.ru/img/${id}-og.jpg`,
      'article'
    )
body.body_light
    +header('mini')
    div.content
        div.article
            div.article__text
                include:markdown-it(plugins=['markdown-it-attrs']) ../../../node_modules/soshnikov-writing/publications/umwelt/site/critchley-dead-sophists.md
            dic.article__data
                figure
                    img(src=`http://umwelt-books.ru/img/${id}-cover.jpg`)
                    figcaption 
                        p 
                            a(href="https://en.wikipedia.org/wiki/Simon_Critchley") Саймон Кричли
                        p «Книга мёртвых философов»
                        p Рипол Классик, 2017. 448 с. Переводчик Павел Миронов